generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  username        String   @unique
  email           String   @unique
  password        String
  phone           String?
  image           String
  register_date   DateTime @default(now())
  referralcode    String   @unique
  redeemedPoints  Int
 
  @@map("users")
}

model Roles {
  id              String  @id @default(uuid())
  roleId          String   
  name            String  
}

model UserCoupons {
  id              String  @id @default(uuid())
  userId          String  @map("user_id")
  couponId        String
  isUsed          Boolean
  expiryDate      DateTime
}